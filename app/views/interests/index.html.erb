<div class="span-10">
	<h2>Interests</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Add Interest'.html_safe, new_interest_path, :class => 'button' %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
			<th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.name %></td>
				<td><%= link_to '<span class="pen icon"></span>Edit'.html_safe, edit_interest_path(interest), :class => 'button left' %> <%= link_to '<span class="trash icon"></span>Delete'.html_safe, interest, :method => :delete, :confirm => "Are you sure?", :class => 'button right negative' %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

