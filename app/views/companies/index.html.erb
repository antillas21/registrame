<div class="span-10">
	<h2>Companies</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Add Company'.html_safe, new_company_path, :class => 'button' %>
</div>

<div id="companies">
	<table id="companies">
		<thead>
			<tr>
				<th>Name</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>JSON</td>
			</tr>
		</tbody>
	</table>
</div>

<script type="text/javascript">
	$('table#companies').dataTable({
		"bJQueryUI": true,
		"sPaginationType": "full_numbers",
		"bProcessing": true,
		"bServerSide": true,
		"sAjaxSource": "/companytable.html"
	});
</script>