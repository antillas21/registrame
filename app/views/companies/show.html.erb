<h2><%= @company.name %></h2>
<%= link_to 'Editar', edit_company_path(@company) %>
<%= link_to 'Borrar', company_path(@company), :method => :delete, :confirm => "Esta seguro?" %>

<div>
	<%= "#{@company.profile.join("<br />")}".html_safe %>
</div>
<div id="staff">
	<table>
	  <thead>
	    <tr>
	      <th>Nombre</th>
				<th>Email</th>
				<th>Acciones</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @company.people.each do |person| %>
	      <tr>
	        <td><%= link_to person.full_name, person_path(person) %></td>
					<td><%= person.email %></td>
					<td><%= link_to "Editar", edit_person_path(person) %> | <%= link_to "Borrar", person, :method => :delete, :confirm => "Esta seguro que desea borrar este reistro?" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>