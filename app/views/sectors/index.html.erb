<div class="span-10">
	<h2>Sectores</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Agregar Sector'.html_safe, new_sector_path, :class => 'button' %>
</div>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
			<th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.name %></td>
				<td><%= link_to '<span class="pen icon"></span>Editar'.html_safe, edit_sector_path(sector), :class => 'button left' %> <%= link_to '<span class="trash icon"></span>Borrar'.html_safe, sector, :method => :delete, :confirm => "Esta seguro de querer borrar este sector?", :class => 'button right negative'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

