<div class="span-10">
	<h2>Registration Types</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Add Registration Type'.html_safe, new_registration_path, :class => 'button' %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
			<th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.name %></td>
				<td><%= link_to '<span class="pen icon"></span>Edit'.html_safe, edit_registration_path(registration), :class => 'button left' %> <%= link_to '<span class="trash icon"></span>Delete'.html_safe, registration, :method => :delete, :confirm => "Are you sure?", :class => 'button right negative'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

