<div class="span-10">
	<h2>Tipos de Registro</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Agregar Tipo de Registro'.html_safe, new_registration_path, :class => 'button' %>
</div>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
			<th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.name %></td>
				<td><%= link_to '<span class="pen icon"></span>Editar'.html_safe, edit_registration_path(registration), :class => 'button left' %> <%= link_to '<span class="trash icon"></span>Borrar'.html_safe, registration, :method => :delete, :confirm => "Esta seguro de querer borrar este tipo de registro?", :class => 'button right negative'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

