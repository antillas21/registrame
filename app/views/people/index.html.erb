<div class="span-10">
	<h2>Attendees</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Add Attendee'.html_safe, new_person_path, :class => 'button' %>
</div>


<div>
	<table id="people">
	  <thead>
	    <tr>
	      <th>Full Name</th>
	    </tr>
	  </thead>
	  <tbody>
	      <tr>
	      	<td>JSON</td>
	      </tr>
	  </tbody>
	</table>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$('#people').dataTable({
			"bJQueryUI": true,
			"sPaginationType": "full_numbers",
			"bProcessing": true,
			"bServerSide": true,
			"sAjaxSource": "/peopletable.html"
		});
	});
</script>