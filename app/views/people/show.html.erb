<h3><%= @person.lname %>, <%= @person.fname %></h3>
<%= link_to "Imprimir gafete" %>

<div>
	<%= @person.registration_name %><br />
	<%= "#{@person.profile.join("<br />")}".html_safe %><br />
	<%= "#{@person.company_profile.join("<br />")}".html_safe unless nil? %>
</div>
<% if @person.interests %>
	<div>
		<h3>Intereses</h3>
		<% @person.interests.each do |interest| %>
			<%= interest.name %><br />
		<% end %>
	</div>
<% end %>
<% if @person.promotions %>
	<div>
		<h3>Se entero del evento por:</h3>
		<% @person.promotions.each do |promotion| %>
			<%= promotion.name %><br />
		<% end %>
	</div>
<% end %>