<div class="ui-widget ui-corner-all">
	<h3 class="ui-widget-header ui-corner-top widget-padding"><%= @person.full_name %></h3>
	<div class="ui-widget-content ui-corner-bottom">
		<div class="widget-padding block">
			<%= "#{@person.profile.join("<br />")}".html_safe %>
			<div class="mecard holder">
				<%= @person.mecard %>
			</div>
			<div id="company" class="holder">
				<% if @person.company %>
				<%= "#{@person.company_profile.join("<br />")}".html_safe unless nil? %>
				<% end %>
			</div>
			<div class="holder">
				<%= image_tag "qrcodes/#{@person.id}.png" %>
			</div>
		</div>
		<div class="widget-padding block">
			<%= link_to '<span class="check icon"></span>Print Badge'.html_safe, person_path(@person), :class => 'button left positive primary' %> <%= link_to '<span class="pen icon"></span>Edit'.html_safe, edit_person_path(@person), :class => 'button middle' %> <%= link_to '<span class="trash icon"></span>Delete'.html_safe, person_path(@person), :method => :delete, :confirm => "Are you sure?", :class => 'button right negative' %>
			<% if @person.interests %>
				<div id="interests" class="holder">
					<h3>Interests</h3>
					<% @person.interests.each do |interest| %>
						<%= interest.name %><br />
					<% end %>
				</div>
			<% end %>
			<% if @person.promotions %>
				<div id="promotions" class="holder">
					<h3>Promotion Media:</h3>
					<% @person.promotions.each do |promotion| %>
						<%= promotion.name %><br />
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>

