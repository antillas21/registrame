<div class="span-10">
	<h2>Users</h2>
</div>
<div class="span-10">
	<%= link_to '<span class="plus icon"></span>Add User'.html_safe, new_admin_user_path, :class => 'button' %>
	
</div>

<table>
	<thead>
		<tr>
			<th>User</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user %></td>
				<td><%= link_to '<span class="pen icon"></span>Edit'.html_safe, edit_admin_user_path(user), :class => 'button left' %> <%= link_to '<span class="trash icon"></span>Delete'.html_safe, admin_user_path(user), :method => :delete, :confirm => "Are you sure?", :class => 'button right negative' %></td>
			</tr>
		<% end %>
	</tbody>
</table>
